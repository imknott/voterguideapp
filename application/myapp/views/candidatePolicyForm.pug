doctype html
html(lang="en" data-bs-theme="dark")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Voting Guide
    link(rel='stylesheet' href='/icons/bootstrap-icons.css')
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')

  body
    a(href='/search', class='btn btn-secondary mb-3 myNewclass') Back to Search

    main
      block content
        .container.mt-5
          .row.justify-content-center
            .col-md-6

              //- Display error alert if error exists
              img(src=candidate_photo, alt='Candidate Photo', class="img-fluid candidate-photo")
              h3 Add a new Policy for #{candidate_name}

              if error
                .alert.alert-danger(role='alert')
                  | !{error}

              .d-flex.justify-content-center.mb-3

              form#authForm(method='post' action='/candidate/newPolicy')
                .mb-3#newcandidatefields()

                  input#candidateid.form-control(type='hidden' name='candidateid' value=candidate_id)

                  label(for='policydescription', class='form-label') Policy Description
                  input#policydescription.form-control(type='text' name='policydescription' placeholder='Enter policy description')

                .d-flex.justify-content-center
                  button#submitBtn.btn.btn-custom-submit(type='submit') Submit Policy


    footer.footer
      p Class: CSC 648 | Section: 02 | Team: Team 3 |
       a(href='/about', class='link-primary') About Us

    script(src='/javascripts/eventAlerts.js')