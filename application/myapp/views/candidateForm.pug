doctype html
html(lang="en" data-bs-theme="dark")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Voting Guide
    link(rel='stylesheet' href='/icons/bootstrap-icons.css')
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')

  body
    a(href='/search', class='btn btn-secondary mb-3 myNewclass') Back to Search

    main
      block content
        .container.mt-5
          .row.justify-content-center
            .col-md-6

              //- Display error alert if error exists
              h3 Add a new Candidate

              if error
                .alert.alert-danger(role='alert')
                  | !{error}

              .d-flex.justify-content-center.mb-3

              //- Maybe add a card to the left or right to the form to display the 
              //- candidate's info as the data is being filled out
              //- needs to be changed, make party a drop down, change the js file incase some fields are empty
              //- make some fields required and others not, add rules to them
              form#authForm(method='post' action='/candidate/new')
                .mb-3#newcandidatefields()
        
                  label(for='name', class='form-label') Full Name
                  input#name.form-control(type='text' name='name' placeholder='Enter the candidate\'s full name')

                  label(for='photo', class='form-label') Photo
                  input#address.form-control(type='text' name='photo' placeholder='Enter a link to the candidate\'s photo')
      
                  label(for='policies', class='form-label') Policies
                  input#policies.form-control(type='text' name='policies' placeholder='Enter candidate\'s policies')

                  label(for='background', class='form-label') Background
                  input#background.form-control(type='text' name='background' placeholder='Enter candidate\'s background information')

                  label(for='location', class='form-label') Location
                  input#location.form-control(type='text' name='location' placeholder='Enter candidate\'s location')

                  label(for='website', class='form-label') Website
                  input#website.form-control(type='text' name='website' placeholder='Enter candidate\'s website')

                  //- planned on making this a dropdown
                  label(for='party', class='form-label') Party
                  input#party.form-control(type='text' name='party' placeholder='Enter candidate\'s party')

                  label(for='phone', class='form-label') Phone number
                  input#phone.form-control(type='text' name='phone' placeholder='Enter candidate\'s phone number')

                  label(for='address', class='form-label') Candidate's Address
                  input#street.form-control(type='text' name='street' placeholder='Street')
                  input#city.form-control(type='text' name='city' placeholder='City')
                  input#state.form-control(type='text' name='state' placeholder='State')
                  input#zip.form-control(type='text' name='zip' placeholder='Zip code')

                  label(for='socials', class='form-label') Socials
                  input#socialsfacebook.form-control(type='text' name='socialsfacebook' placeholder='Enter candidate\'s Facebook')
                  input#socialstwitter.form-control(type='text' name='socialstwitter' placeholder='Enter candidate\'s Twitter')

                //- Centered Submit Button
                .d-flex.justify-content-center
                  button#submitBtn.btn.btn-custom-submit(type='submit') Submit Candidate Info


    footer.footer
      p Class: CSC 648 | Section: 02 | Team: Team 3 |
       a(href='/about', class='link-primary') About Us

    script(src='/javascripts/candidateAlerts.js')